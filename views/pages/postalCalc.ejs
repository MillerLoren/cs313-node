<% include ../partials/header.ejs %>
<meta name="description" content="Postal rate calculator.">
<title>Rates</title>
</head>
<body>

<% include ../partials/nav.ejs %>
<div id="content">
  <h2>Check Rates</h2>
    <form id="calcForm" action="/getRate" method="POST">
        <table id="postalCalcTable">
            <tr>
                <td>Select Mail Type:</td>
                <td>
                    <select id="calcFormSelect" name="mailType">
                        <option value="letters_s">Letters (Stamped)</option>
                        <option value="letters_m">Letters (Metered)</option>
                        <option value="post" selected>Postcard</option>
                        <option value="large_env">Large Envelopes (Flats)</option>
                        <option value="package">First-Class Package Service</option>
                        <option value="key_ident">Keys and Identification Devices</option>
                    </select>
                </td>
            </tr>
            <tr id="weightRow">
                <td>Weight (oz.):</td>
                <td><input type="number" name="weight" value="0.0" step="0.1" /></td>
            </tr>
        </table>
        <input type="submit" name="submit" />
    </form>
</div>
<% include ../partials/footer.ejs %>